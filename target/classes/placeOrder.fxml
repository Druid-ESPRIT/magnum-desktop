<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.druid.PlaceOrderController">
   <children>
      <VBox alignment="CENTER" layoutX="232.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="61.0" prefWidth="400.0">
               <children>
                  <Label text="Offer id: " />
                  <Label fx:id="lbofferid" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="400.0">
               <children>
                  <Label contentDisplay="RIGHT" text="Podcaster Name:" />
                  <Label />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="400.0">
               <children>
                  <Label text="Price: " />
                  <Label fx:id="lbOrderPrice" />
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="146.0" prefWidth="400.0">
               <children>
                  <Slider fx:id="sliderId" majorTickUnit="1.0" max="12.0" minorTickCount="1" onMouseClicked="#sliderClicked" showTickLabels="true">
                     <VBox.margin>
                        <Insets left="30.0" right="30.0" />
                     </VBox.margin>
                  </Slider>
                  <HBox alignment="CENTER" prefHeight="30.0" prefWidth="400.0">
                     <children>
                        <Label text="Duration: " />
                        <Label fx:id="lbPlan" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="133.0" prefWidth="400.0">
                     <children>
                        <Label text="Coupon :" />
                        <TextField fx:id="tfcoupon" stylesheets="@style.css" />
                     </children>
                  </HBox>
                  <Label fx:id="errormsg">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="90.0" prefWidth="400.0">
               <children>
                  <Label text="Total: " />
                  <Label fx:id="lbTotal" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#btnConfirmOrder" styleClass="search-button" stylesheets="@style.css" text="Confirm" />
         </children>
      </VBox>
   </children>
</AnchorPane>
