<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.druid.controllers.ForgotPasswordController">
    <children>
        <Button fx:id="send" layoutX="199.0" layoutY="270.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="116.0"
                styleClass="form-button" stylesheets="@../general.css" text="Send"/>
        <Button fx:id="cancel" layoutX="326.0" layoutY="270.0" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="74.0" styleClass="form-button" stylesheets="@../general.css" text="Cancel"/>
        <TextField fx:id="username" layoutX="199.0" layoutY="200.0" prefHeight="30.0" prefWidth="201.0"
                   promptText="Username" styleClass="form-button" stylesheets="@../general.css"
                   AnchorPane.topAnchor="200.0"/>
        <Text layoutX="148.0" layoutY="112.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Tell us what your username is, and we'll send you an email with a one-time-use token to reset your password."
              textAlignment="CENTER" wrappingWidth="303.406005859375">
            <font>
                <Font size="16.0"/>
            </font>
        </Text>
        <Text layoutX="170.0" layoutY="64.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Forgot Your Password?">
            <font>
                <Font size="24.0"/>
            </font>
        </Text>
        <Text fx:id="usernameAlert" fill="#bf616a" layoutX="231.0" layoutY="252.0" opacity="0.0" strokeType="OUTSIDE"
              strokeWidth="0.0" text="This is reserved for errors.">
            <font>
                <Font size="11.0"/>
            </font>
        </Text>
    </children>
</AnchorPane>
