                        <Insets />
                     </VBox.margin>
                     <styleClass>
                        <String fx:value="icon-button" />
                        <String fx:value="shadow" />
                     </styleClass>
                     <graphic>
                        <FontAwesomeIconView glyphName="SIGN_OUT" />
                     </graphic>
